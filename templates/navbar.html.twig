    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu"
            aria-controls="navbarMenu" aria-expanded="false" aria-label="Menu">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMenu">
        <div class="navbar-nav mr-auto mt-2 mt-lg-0">
            {% if is_granted('ROLE_USER') %}
                <a class="nav-item nav-link active" href="{{ path('calendar') }}">
                    {% trans %}walk.schema{% endtrans %}
                </a>

                {% if is_granted('ROLE_WALK') %}
                    <a class="nav-item nav-link" href="{{ path('walked_list') }}">
                        {% trans %}walk.walked-rounds{% endtrans %}
                    </a>
                {% endif %}

