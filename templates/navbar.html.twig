                    {% trans %}user.account{% endtrans %}
                </a>
                <a class="btn btn-outline-primary d-none d-lg-block" href="{{ path('logout') }}">
                    {% trans %}security.logout{% endtrans %}
                    <i class="fas fa-sign-out-alt"></i>
