{% extends "base.html.twig" %}

{% block title %}{% trans %}walk.rounds{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-12">
            <h1>{% trans %}walk.rounds{% endtrans %}</h1>
        </div>
        <div class="offset-md-1 col-md-3 col-12">
            <a href="{{ path('round_add') }}" class="btn btn-outline-primary btn-block" role="button">
                {% trans %}Add{% endtrans %}
            </a>
        </div>
    </div>
    <br>
    <div class="table-responsive">
        <table id="round_list_table" class="table table-hover table-sm">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">{% trans %}walk.round-date{% endtrans %}</th>
                <th scope="col">{% trans %}walk.round-time{% endtrans %}</th>
                <th scope="col"><i class="far fa-hand-rock"></i></th>
                <th scope="col"><i class="far fa-hand-rock"></i></th>
                <th scope="col"><i class="far fa-hand-rock"></i></th>
            </tr>
            </thead>
            <tbody>
            {% for round in list %}
                <tr>
                    <th scope="row">
                        <a href="{{ path('round_detail', {id: round.id}) }}">
                            {{ round.id }}
                        </a>
                    </th>
                    <td>{{ round.datetime|localizeddate('none', 'none', null, null, 'eeeeee d MMM Y') }}</td>
                    <td>{{ round.datetime|date('H:i') }}</td>
                    <td>{{ round.walkers|length }}</td>
                    <td>{{ round.results|length }}</td>
                    <td>{{ round.comments|length }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
