{% extends "base.html.twig" %}

{% block title %}{% trans %}admin.config{% endtrans %}: {% trans %}walk.results{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-12">
            <h1>{% trans %}admin.config{% endtrans %}: {% trans %}walk.results{% endtrans %}</h1>
        </div>
        <div class="offset-md-1 col-md-3 col-12">
            <a href="{{ path('config_result_add') }}" class="btn btn-outline-primary btn-block" role="button">
                {% trans %}Add{% endtrans %}
            </a>
        </div>
    </div>
    <br>
    <div class="table-responsive">
        <table id="result_list_table" class="table table-hover table-sm">
            <thead>
            <tr>
                <th scope="col">{% trans %}walk.result-description{% endtrans %}</th>
                <th scope="col" class="text-center">{% trans %}walk.result-remarks{% endtrans %}</th>
                <th scope="col" class="text-center">{% trans %}walk.result-incident{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for result in list %}
                <tr {% if result.isDeleted %}class="table-muted"{% endif %}>
                    <th scope="row">
                        <a href="{{ path('config_result_edit', {id: result.id}) }}">
                            {{ result.description }}
                        </a>
                    </th>
                    <td class="text-center">
                        {% if result.remarks %}<i class="fas fa-check"></i>{% endif %}
                    </td>
                    <td class="text-center">
                        {% if result.incident %}<i class="fas fa-check"></i>{% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
